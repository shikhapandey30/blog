<%= form_with model: @article, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>
  
  <p>
    <%= form.label :firstname %><br>
    <%= form.text_field :firstname %>
  </p>
 
  <p>
    <%= form.label :lastname %><br>
    <%= form.text_area :lastname %>
  </p>
  <p>
    <%= form.submit %>
  </p>
 
<% end %>